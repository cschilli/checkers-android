<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.uno.dbbc.checkers">

    <!-- Beginning of program -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/checkers_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- SplashScreen.java -->
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity.java -->
        <activity
            android:name=".MainActivity"
            android:label="Checkers"
            android:theme="@style/MainMenuTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- ButtonBoard.java -->
        <activity
            android:name=".ButtonBoard"
            android:label=""
            android:theme="@style/ButtonBoardTheme"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <!-- ButtonBoardAI.java -->
        <activity
            android:name=".ButtonBoardAI"
            android:label=""
            android:theme="@style/ButtonBoardTheme"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

    </application>

</manifest>